<div class="thing">
<div class="content">
<h1>Please Sign in</h1>

<%= form_tag do %>
  <div class="form-group">
    <%= label_tag :email%>
    <%= text_field_tag :email%>
  </div>

  <div class="form-group">
    <%= label_tag :password%>
    <%= password_field_tag :password%>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In"%>
  </div>

  <div class="form-group">
    <%= link_to "Sign Up", sign_up_path%>
  </div>

<%end%>
</div>
</div>
