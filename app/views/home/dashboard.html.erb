<%= render "layouts/header" %>
<div class="container">
  <div class="col-md-2">
    <div class="image_profile">
      <img src="tron-disk.png" alt="" class="img-rounded" style="width:150px;"/>
    </div>
    <%= @current_user.email %>
  </br>
  <div class="createposts">
<%= form_for @post do |f| %>
<%= f.text_area :content, as: :content, class:"newpost", placeholder:"Something new?"%>
<%= f.submit "Post it!", class: "newpostsubmit" %>
  <% end %>

<% @current_user.posts.reverse.each do |post|%>
<li><%= post.content%></li>
  <% end %>

</div>
  <ul>
        <div class="followers">

          <% @current_user.following_users.each do |user| %>
          <li>
            <strong><%= user.email %></strong>
            <% @posts.each do |f| %>
            <div class="friendphoto">
              <img src="<%= f.user.photo_id%>" alt="">
            </div>
            <p><%= f.content%></p>
            <% end %>
            <%= link_to "Unfollow", stop_follow_user_path(id: user.id), method: :post %>
          </li>
          <% end %>
        </ul>
        </div>
</div>
</div>
